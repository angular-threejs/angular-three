{
	"name": "core",
	"$schema": "../../node_modules/nx/schemas/project-schema.json",
	"sourceRoot": "libs/core/src",
	"prefix": "platform",
	"tags": [],
	"projectType": "library",
	"targets": {
		"build": {
			"executor": "@nx/angular:package",
			"outputs": ["{workspaceRoot}/dist/{projectRoot}"],
			"options": {
				"project": "libs/core/ng-package.json"
			},
			"configurations": {
				"production": {
					"tsConfig": "libs/core/tsconfig.lib.prod.json"
				},
				"development": {
					"tsConfig": "libs/core/tsconfig.lib.json"
				}
			},
			"defaultConfiguration": "production"
		},
		"package": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["pnpm exec nx build core", "pnpm exec nx build plugin", "pnpm exec nx generate-json core"],
				"parallel": false
			}
		},
		"generate-json": {
			"executor": "nx:run-commands",
			"options": {
				"commands": ["node ./tools/scripts/generate-json.mjs"],
				"parallel": true
			}
		},
		"test": {
			"executor": "@nx/jest:jest",
			"outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
			"options": {
				"jestConfig": "libs/core/jest.config.mts"
			}
		},
		"lint": {
			"executor": "@nx/eslint:lint",
			"outputs": ["{options.outputFile}"],
			"options": {
				"lintFilePatterns": ["libs/core/**/*.ts", "libs/core/**/*.html", "libs/core/package.json"]
			}
		}
	}
}
